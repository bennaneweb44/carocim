{#
/**
 * @file
 * Default theme implementation for a single field in a view.
 *
 * Available variables:
 * - view: The view that the field belongs to.
 * - field: The field handler that can process the input.
 * - row: The raw result of the database query that generated this field.
 * - output: The processed output that will normally be used.
 *
 * When fetching output from the row this construct should be used:
 * data = row[field.field_alias]
 *
 * The above will guarantee that you'll always get the correct data, regardless
 * of any changes in the aliasing that might happen if the view is modified.
 *
 * @see template_preprocess_views_view_field()
 *
 * @ingroup themeable
 */
#}

<div class="affiche">
    {{ view.field.field_miniature_carreau.original_value }}      
    <div class="cache col-md-12 col-12 bg-info text-center" style="border: 2px solid black">
        <span class="close">&times;</span>
        <br style="margin-bottom: 15px;" />        
        {{ view.field.field_miniature_carreau.original_value |replace({'aRemplacer': 'col-md-12', 'border: 2px solid black': ''}) | raw}}  
        <span style="margin-bottom: 30px !important">
            {{ view.field.title.original_value }} 
        </span>
    </div>
</div>

<style>
    .close {        
        color: #000 !important;
        font-size: 30px !important;           
    }
    .affiche {
        display: block;
        text-align: center;
        z-index: 5;        
    }
    .cache {
        display: none;
        z-index: 4;
        position: absolute;
        padding-top: 15px;
        bottom: 85px;
        left: -5px;
        height: 300px;
        width: 300px;
    }

    .affiche:hover .cache {
        display: block; 
    }

    @media (max-width: 640px) {
        /* CSS mobile ici */
        .affiche {
            text-align: center;
        }
        .cache {
            left: 65px !important;
        }
    }

    @media (min-width: 641px) and (max-width: 768px) {
        /* CSS tablette ici */
        .cache {
            left: 10px !important;
        }
    }

    @media (min-width: 769px) and (max-width: 1023px) {
        /* CSS tablette ici */
        .cache {
            left: -10px !important;
        }
    }

    @media (min-width: 1024px) and (max-width: 1439px) {
        /* CSS tablette ici */
        .cache {
            left: -15px !important;
            padding-bottom: 25px;
            height: 360px !important;
        }
    }

    @media (min-width: 1440px) {
        /* CSS tablette ici */
        .cache {
            left: -20px !important;
            padding-bottom: 25px;
            height: 360px !important;
        }
    }
    
</style>

<script>
    var closebtns = document.getElementsByClassName("close");
    var i;

    for (i = 0; i < closebtns.length; i++) {
        closebtns[i].addEventListener("click", function() {
            this.parentElement.style.display = 'none';
        });
    }
</script>