{#
/**
 * @file
 * Default theme implementation to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 *
 * @ingroup themeable
 */
#}

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

{% for row in carreaux %}    
    
    <div class="col-md-3 col-sm-6 col-12 loupe" >
        <div class="text-center" style="height: 45px">
            <a href="{{ 'node/' ~ row.id  }}" style="position: relative; top: 15px">
                {{ row.nomCarreau }}
            </a>
        </div>                
        
        <div class="affiche" onmouseover="showLoop({{ row.id }});" onmouseleave="hideLoop({{ row.id }});">              

            <!-- Image Mobile-->
            <img class="hidden-xs hidden-sm " src="{{ row.imageCarreau }}" style="border: 2px solid #000" />
            <!-- Image Desktop -->
            <img class="hidden-md hidden-lg" src="{{ row.imageCarreau }}" style="border: 2px solid #000" data-toggle="modal" data-target="#modal_desktop_{{ row.id }}"/>

            <!-- Boutton Rendu -->
            <div class="imageLoupe hidden-xs hidden-sm " id="loupe_{{ row.id }}" data-toggle="modal" data-target="#modal_desktop_{{ row.id }}">
                Rendu
            </div>

            <!-- Modal -->
            <div class="modal fade" id="modal_desktop_{{ row.id }}" tabindex="-1" role="dialog" aria-labelledby="labelModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
            
                        <div class="modal-header">
                            <h5 class="modal-title" id="labelModal">{{ row.nomCarreau }}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                
                        <div class="modal-body">
                            <img src="{{ row.imageCarreau }}" style="height: 100%; width: 100%; border: 2px solid #000" />
                        </div>
                
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
{% endfor %}

<style>
    .fa.fa-search {
        display: block;
        position: relative;
        top: 3px;
        color: #eee;
        font-size: 16px;
    }
    .imageLoupe {
        display: none;
        cursor: pointer;

        z-index: 5;
        position: absolute;
        left: 50%;
        top: 57.6%;
        transform: translate( -50%, -50% );
        padding: 3px 15px 3px 25px;
        color: #fff;
        background-color: rgba(0, 0, 0, 0.3);
        font-family: "Font Awesome 5 Free";
        font-weight: 900;        
        content: "\f002"; /* loupe */
        
        height: 30px;
        width: 80px;
        
        padding-left: 6px;
        font-size: 16px !important;
        border-radius: 5px 5px 5px 5px;
    }
    
    .affiche {
        display: block;
        text-align: center;
        z-index: 5;        
    }
    
    @media (max-width: 640px) {
        .imageLoupe {
            top: 56.8%;
            left: 52%;
        }
        .affiche {
            margin-left: 5px;
        }
    }

    @media (min-width: 641px) and (max-width: 768px) {
        .imageLoupe {
            top: 56.8%;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        /*.affiche > a:hover + .loupe:last-child {    
            display: inline-block;   
            z-index: 6;                             
        }*/
    }

    @media (min-width: 1025px) and (max-width: 1439px) {
        .affiche > a:hover + .loupe:last-child {    
            display: inline-block;   
            z-index: 6;                             
        }
    }

    @media (min-width: 1440px) {
        .affiche > a:hover + .loupe:last-child {    
            display: inline-block;   
            z-index: 6;                             
        }
    }
    
</style>

<script>

    // N'afficher pas la loupe pour les "mobile" et "tablette"
    let desktop = false;
    if ( !navigator.userAgent.match(/Android/i)
        && !navigator.userAgent.match(/webOS/i)
        && !navigator.userAgent.match(/iPhone/i)
        && !navigator.userAgent.match(/iPad/i)
        && !navigator.userAgent.match(/iPod/i)
        && !navigator.userAgent.match(/BlackBerry/i)
        && !navigator.userAgent.match(/Windows Phone/i) ) {
            desktop = true;
    }

    function showLoop(id) 
    {
        if (desktop) {
            let element = document.getElementById('loupe_'+id);    
            element.style.display = 'inline-block';
        }            
    }

    function hideLoop(id) 
    {
        if (desktop) {
            let element = document.getElementById('loupe_'+id);    
            element.style.display = 'none';
        }            
    }
 
</script>
