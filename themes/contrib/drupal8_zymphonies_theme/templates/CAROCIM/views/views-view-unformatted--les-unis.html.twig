{#
/**
 * @file
 * Default theme implementation to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 *
 * @ingroup themeable
 */
#}

<div style="margin-bottom: -2em">  
    {% for row in rows %}  
        {{ row.content }}  
    {% endfor %}
</div>

<style>    

    img.hidden-md-up, img.hidden-sm-down {
        border: 2px solid #000;
        cursor: pointer;
    }

    .modal-body > img {
        height: 100%; 
        width: 100%; 
        border: 2px solid #000;
    }
    

    .loupe {        
        margin-top: 1.8em;
        padding-bottom: 1em;        
        margin-bottom: 1em;
    }

    .fa.fa-search {
        display: block;
        position: relative;
        top: 3px;
        color: #eee;
        font-size: 16px;
    }
    .imageLoupe {
        display: none;
        cursor: pointer;

        z-index: 5;
        position: absolute;
        left: 50%;
        top: 57.6%;
        transform: translate( -50%, -50% );
        padding: 3px 15px 3px 25px;
        color: #fff;
        background-color: rgba(0, 0, 0, 0.4);
        font-family: "Font Awesome 5 Free";
        font-weight: 900;        
        content: "\f002"; /* loupe */
        
        height: 30px;
        width: 60px;
        
        padding-left: 6px;
        font-size: 16px !important;
        border-radius: 5px 5px 5px 5px;
    }
    
    .affiche {
        display: block;
        padding-left: auto;
        padding-right: auto;
        padding: 15px;
        z-index: 5;        
    }

    /************************ MODAL **********************/
    .close {
        font-size: 3em;
        color: #000;
    }

    .modal-footer {
        margin-top: -25px;
        margin-bottom: -7px;
    }
    .modal {
        margin-top: -25px;
    }

    .modal-open {
        overflow: auto;
    }

    .btn {
        background-color: #333;
        color: #fff;
    }
    .btn:hover {
        color: #fff;
        background-color: #666; 
    }

    /* Desktops */
    @media (min-width: 1281px) {

        .hidden-sm-down {
            display: none;
        }
        .hidden-md-up {
            display: block;
        }   

        .affiche > a:hover + .loupe:last-child {    
            display: inline-block;   
            z-index: 6;                             
        }
    }

    /* Laptops, Desktops */
    @media (min-width: 1025px) and (max-width: 1280px) {
    
        .hidden-sm-down {
            display: none;   
        }
        .hidden-md-up {
            display: block ;
        }  

        .affiche > a:hover + .loupe:last-child {    
            display: inline-block;   
            z-index: 6;                             
        }
    }

    /***************************************************************/

    /* Tablets, Ipads (portrait) */
    @media (min-width: 768px) and (max-width: 1024px) {
    
        .hidden-sm-down {
            display: block;   
        }
        .hidden-md-up {
            display: none;
        }  
        .imageLoupe {
            display: none;
        }
        .affiche {
            padding: 35px !important;
        }
        img.hidden-md-up, img.hidden-sm-down {
            height: 100%;
            width: 100%;
        }
    }

    /* Tablets, Ipads (landscape) */
    @media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
    
        .hidden-sm-down {
            display: block;   
        }
        .hidden-md-up {
            display: none;
        }
        .imageLoupe {
            display: none;
        }         
        .affiche {
            padding: 12px !important;
        }
        img.hidden-md-up, img.hidden-sm-down {
            height: 100%;
            width: 100%;
        }    
    }

    /* Low Resolution Tablets, Mobiles (Landscape) */
    @media (min-width: 481px) and (max-width: 767px) {
    
        .hidden-sm-down {
            display: inline-block;   
        }
        .hidden-md-up {
            display: none;
        }

        .imageLoupe {
            top: 56.8%;
            left: 52%;
            display: none;
        }
        .loupe {
            width: 48.5%;
            float: left;
        }
        .slider-caption {
            display: block;
        }

        .affiche {
            padding: 35px !important;
        }
        img.hidden-md-up, img.hidden-sm-down {
            height: 100%;
            width: 100%;
        }
    }

    /* Mobiles (Portrait) */
    @media (min-width: 320px) and (max-width: 480px) {
        
        .hidden-sm-down {
            display: inline-block;   
        }

        .hidden-md-up {
            display: none;
        }

        .imageLoupe {
            top: 56.8%;
            left: 52%;
            display: none;
        }

        .affiche {
            padding: 35px !important;
        }

        img.hidden-md-up, img.hidden-sm-down {
            height: 100%;
            width: 100%;
        }

        .modal {
            margin-top: 20%;
        }
    }
    
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    $(".affiche").on('mouseover', function(event){
        event.preventDefault();

        let id = $(this).attr('id').replace('affiche', '');        
        $('#loupe_'+id).css('display', 'inline-block');
    });

    $(".affiche").on('mouseleave', function(event){
        event.preventDefault();

        let id = $(this).attr('id').replace('affiche', '');        
        $('#loupe_'+id).css('display', 'none');
    });

    // N'afficher pas la loupe pour les "mobile" et "tablette"    
    let screen = 'desktop';
    if (navigator.userAgent.match(/(android|iphone|ipad|blackberry|symbian|symbianos|symbos|netfront|model-orange|javaplatform|iemobile|windows phone|samsung|htc|opera mobile|opera mobi|opera mini|presto|huawei|blazer|bolt|doris|fennec|gobrowser|iris|maemo browser|mib|cldc|minimo|semc-browser|skyfire|teashark|teleca|uzard|uzardweb|meego|nokia|bb10|playbook)/gi)) {
        if ( ((screen.width  >= 480) && (screen.height >= 800)) || ((screen.width  >= 800) && (screen.height >= 480)) || navigator.userAgent.match(/ipad/gi) ) {
            screen = 'tablet';
        } else {
            screen = 'mobile';
        }
    }

    function showLoop(id) 
    {
        if (screen == 'desktop') {
            let element = document.getElementById('loupe_'+id);    
            element.style.display = '';
        }            
    }

    function hideLoop(id) 
    {
        if (screen == 'desktop') {
            let element = document.getElementById('loupe_'+id);    
            element.style.display = 'none';
        }            
    }
 
</script>
